extends ../layout/index 

block contenido 
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Administración 
            span.font-normal Zacatlán
        h2.text-center.text-2xl.font-extrabold= pagina

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
              form.space-y-5(method="POST", action="/auth/login")
                div 
                    input(type="hidden" name="_csrf" value= csrfToken)
                    label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="nombre") Correo 
                    input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu correo" type="email" name="email")
                    if (errores)
                        each error in errores
                            if (error.param=='email')
                                .bg-green-100.rounded-lg.py-5.px-6.mb-4.text-base.text-green-700.mb-3(role='alert')
                                    | #{error.msg}
                div    
                    label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="contraseña") Contraseña 
                    input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu contraseña" type="password" name="password")
                    if (errores)
                        each error in errores
                            if (error.param=='password')
                                .bg-green-100.rounded-lg.py-5.px-6.mb-4.text-base.text-green-700.mb-3(role='alert')
                                    | #{error.msg}
                                    
                div.flex.items-center-justify-between
                    a.text-gray-500.text-xs(href="/auth/registro") ¿No tienes cuenta? Crea una
                input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit", value="Iniciar Sesión")